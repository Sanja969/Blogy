  <%= link_to user_post_path(@user.id, post.id), id: "#{post.id}" do %>
    <div class="post">
      <div class='post-text-box'>
        <h3><%= post.Title %></h3>
        <p><%= post.Text %></p>
      </div>
      <p class="comments-likes-number">
        Comments:
        <%= post.CommentsCounter || 0 %>,
        Likes:
        <%= post.LikesCounter || 0 %>
      </p>
      <% if can? :destroy, post %>
        <%= button_to "Destroy this post", user_post_path(@user.id, post.id), method: :delete %>
      <% end %>
    </div>
  <% end %>
