<div class='sign-up'>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :Name, autofocus: true, autocomplete: "Name", placeholder: 'Your Name', class: "sign-up-fil" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Your Email', class: "sign-up-fil" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password - #{@minimum_password_length} characters minimum", class: "sign-up-fil" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class: "sign-up-fil" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'sign-up-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
